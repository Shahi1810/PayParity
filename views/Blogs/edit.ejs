<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center text-light">Edit Blog</h1>
        <div class="col-6 offset-3">
            <form action="/blogs/<%= blog._id %>?_method=put" method="post" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label text-light" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="blog[title]" value="<%= blog.title %>" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-light" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="blog[image]" value="<%= blog.image %>">
                </div>

                <div class="mb-3">
                    <label class="form-label text-light" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="blog[description]" required><%= blog.description %></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-info">Update Blog</button>
                </div>
                </form>
                <a href="/blogs/<%= blog._id %>" class="btn btn-secondary text-dark">Back to Blog</a>
        </div>
    </div>